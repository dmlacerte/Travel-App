<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
    crossorigin="anonymous"
    />
    <%- include('./show-style'); %>
    <title>Document</title>
</head>
<body>
    <h1><%=activities[0].type%></h1>
    <div>
        <ul class="list-group">
            <% for (let i = 0; i < activities.length; i++) { %>
            <li class="list-group-item d-flex justify-content-between">
            <div> <%= activities[i].name %> </div>
            <div class="links">
                <a href="" class="btn btn-primary">Edit</a>
                <form action="/<%=activities[i].state%>/<%=activities[i].type%>/<%=activities[i].id%>?_method=DELETE" method="POST" class="d-inline">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
            </li>
            <% } %>
        </ul>
    </div>
    <div>
        <nav class="navbar navbar-expand-lg fixed-bottom navbar-light bg-light"> 
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Add New</button>  
        <a class="nav-link" href="#">Go Back</a>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="addNewModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addNewModal">New Activity</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/<%=activities[0].state%>/<%=activities[0].type%>" method="POST" class="d-inline">
                <div class="modal-body">
                    <label for="name">Name (Required):</label>
                    <input type="text" id="name" name="name" class="form-control" />
                    <label for="type">Type (Required):</label>
                    <input type="text" id="type" name="type" class="form-control" />
                    <label for="description">Description:</label>
                    <input type="text" id="description" name="description" class="form-control" />
                    <label for="city">City (Required):</label>
                    <input type="text" id="city" name="city" class="form-control" />
                    <label for="state">State (Required):</label>
                    <input type="text" id="state" name="state" class="form-control" />
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" class="form-control" />
                    <label for="pricePoint">Price Point:</label>
                    <input type="text" id="pricePoint" name="pricePoint" class="form-control" />
                    <input class="form-check-input" type="checkbox" id="haveVisited" name="haveVisited" />
                    <label class="form-check-label" for="haveVisited">Have Visited?</label>
                    <label for="comments">Comments:</label>
                    <input type="text" id="comments" name="comments" class="form-control" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" />
                </div>
            </form>
          </div>
        </div>
    </div> 
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>